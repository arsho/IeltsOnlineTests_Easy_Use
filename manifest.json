{
  "manifest_version": 2,  
  "name": "IeltsOnlineTests_Easy_Use",
  "version": "1.0",
  "description": "Use IeltsOnlineTests easily.",  
  "icons"				: { 
		"16"			: "icon16.png",
        "48"			: "icon48.png",
        "128"			: "icon128.png" 
  },
  "browser_action"	: {
		"default_title"	: "IeltsOnlineTests_Easy_Use / datamate(arsho)",      // optional; shown in tooltip
		"default_icon"	: "icon16.png" 
	},  
  "author": "Ahmedur Rahman Shovon",  
  "content_scripts": [{
      "matches": ["http://ieltsonlinetests.com/*","http://ez-dictation.com/*","http://mini-ielts.com/*"],
      "js": ["bg.js"]
  }],
  "web_accessible_resources": ["app_script.js"]
}